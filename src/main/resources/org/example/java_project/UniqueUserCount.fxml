<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.java_project.Controller.UniqueUserCountController">
    <LineChart fx:id="lineChart" title="Unique User Count" legendVisible="false">
        <xAxis>
            <CategoryAxis label="Type" />
        </xAxis>
        <yAxis>
            <NumberAxis label="Count" />
        </yAxis>
    </LineChart>
    <TableView fx:id="tableView">
        <columns>
            <TableColumn fx:id="typeColumn" text="Type" />
            <TableColumn fx:id="countColumn" text="Count" />
        </columns>
    </TableView>
    <Button text="Show Results" onAction="#handleShowResults"/>
</VBox>
