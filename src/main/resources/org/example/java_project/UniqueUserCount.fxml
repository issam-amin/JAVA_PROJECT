<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="707.0" prefWidth="1027.0" spacing="20.0" stylesheets="@Style/uniqueclient.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.java_project.Controller.UniqueUserCountController">
    <children>
        <!-- Title -->
        <Label text="Unique User Count" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #4A90E2;" />

        <!-- TableView -->
        <TableView fx:id="tableView" prefHeight="413.0" prefWidth="522.0" style="-fx-border-color: #4A90E2; -fx-border-width: 2;">
            <columns>

                <!-- Type Column -->
                <TableColumn fx:id="typeColumn" prefWidth="200"
                             style="-fx-font-weight: bold; -fx-alignment: CENTER; -fx-font-size: 14px; -fx-text-fill: #333333; -fx-background-color: #f5f5f5;"
                             text="Type"
                />

                <!-- Count Column -->
                <TableColumn fx:id="countColumn" prefWidth="200"
                             style="-fx-font-weight: bold; -fx-alignment: CENTER; -fx-font-size: 14px; -fx-text-fill: #333333; -fx-background-color: #f5f5f5;"
                             text="Count" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <!-- Buttons -->
        <Button fx:id="loadButton" text="Reload Data" prefHeight="52.0" prefWidth="187.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 10; -fx-background-radius: 10;" />
        <Button fx:id="chartButton" text="Show Chart" prefHeight="52.0" prefWidth="187.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 10; -fx-background-radius: 10;" />
    </children>
    <padding>
        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
    </padding>
</VBox>
