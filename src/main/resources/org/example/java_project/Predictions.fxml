<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="707.0" prefWidth="1027.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.java_project.Controller.ClientChurnController">
   <children>
      <!-- Search Bar -->
      <HBox style="-fx-padding: 10 10 10 10; -fx-spacing: 10;">
         <TextField fx:id="searchTextField" prefWidth="300" promptText="Search by Keyword..." style="-fx-background-color: #f0f0f0; -fx-border-radius: 5px;" />
         <Button style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-radius: 5px;" text="Search" />
      </HBox>

      <!-- Table View Container -->
      <HBox alignment="CENTER" prefHeight="577.0" prefWidth="1027.0" style="-fx-padding: 10 10 10 10;-fx-background-color: #fff;">
         <children>
            <TableView fx:id="customerPredictionTableView" prefHeight="380.0" prefWidth="748.0" style="-fx-border-color: #ccc; -fx-border-radius: 5px;">
               <columns>
                  <TableColumn fx:id="customerIdColumn" prefWidth="200" style="-fx-text-fill: #000;" text="CustomerID" />
                  <TableColumn fx:id="fullNameColumn" prefWidth="200" style="-fx-text-fill: #000;" text="FullName" />
                  <TableColumn fx:id="predictionColumn" prefWidth="200" style="-fx-text-fill: #000;" text="Prediction" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </HBox>
   </children>
</VBox>
